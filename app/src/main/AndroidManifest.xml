<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kidslearn.kidsgame.kidslearninggame">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_app_id" />

        <activity
            android:name="kidslearn.kidsgame.kidslearninggame.activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="kidslearn.kidsgame.kidslearninggame.MainActivity" />
        <activity android:name="kidslearn.kidsgame.kidslearninggame.FruitsActivity" />
        <activity android:name="kidslearn.kidsgame.kidslearninggame.AlphabetActivity" />
        <activity android:name="kidslearn.kidsgame.kidslearninggame.NumberActivity" />
        <activity android:name="kidslearn.kidsgame.kidslearninggame.KnowledgeActivity" />
        <activity android:name="kidslearn.kidsgame.kidslearninggame.DrawingActivity" />
        <activity android:name="kidslearn.kidsgame.kidslearninggame.activity.SettingsActivity" />

        <service
            android:name="kidslearn.kidsgame.kidslearninggame.util.BackgroundSoundService"
            android:enabled="true" />
    </application>


</manifest>